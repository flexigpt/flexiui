{
	"extends": ["plugin:prettier/recommended", "next/core-web-vitals"],
	"plugins": ["prettier"],
	"rules": {
		"@next/next/no-img-element": "off",
		"@next/next/no-html-link-for-pages": "off",
		"prettier/prettier": "error"
	},
	"settings": {
		"next": {
			"rootDir": "."
		},
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true,
				"project": "./tsconfig.json" // Ensure this points to your `tsconfig.json`
			}
		}
	},
	"ignorePatterns": ["build/**", ".next/**", "app/backendapibase/wailsjs/**"],
	"overrides": [
		{
			"files": ["*.js"],
			"rules": {}
		}
	]
}
