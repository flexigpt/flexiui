{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node", // was bundler
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./app",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.d.ts",
		"**/*.tsx",
		"../build/types/**/*.ts",
		"dist/types/**/*.ts",
		"build/types/**/*.ts",

		".next/types/**/*.ts",
		"../tailwind.config.ts",
		"../postcss.config.mjs",
		"../next.config.mjs"
	],
	"exclude": ["node_modules"]
}
