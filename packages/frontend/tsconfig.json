{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true, // not in template
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./app",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.d.ts",
		"**/*.tsx",
		"../build/types/**/*.ts",
		"build/types/**/*.ts",
		".next/types/**/*.ts",
		"tailwind.config.ts",
		"postcss.config.js",
		"next.config.js",
		"../**/build/*.js"
	],
	"exclude": ["node_modules"]
}
