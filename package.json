{
	"name": "flexigpt",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "agentts/build/main.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/flexigpt/flexiui.git"
	},
	"author": "Pankaj Pipada <ppipada@gmail.com>",
	"description": "Agent for the flexigpt ecosystem",
	"scripts": {
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint -- --fix",
		"fmt": "prettier -c .",
		"fmt:fix": "prettier -w .",
		"clean": "lerna run clean",
		"pre-pack": "lerna run build --ignore frontend --ignore agentts --stream --sort && lerna run electron:build --scope frontend && lerna run build --scope agentts",
		"boot": "lerna run build --scope agentts && electron .",
		"electron:build": "lerna run clean && pnpm run pre-pack && lerna run pack --scope agentts",
		"electron:dev": "lerna run clean && lerna run build --ignore frontend --ignore agentts --stream --sort && concurrently -k \"lerna run electron:dev --scope frontend\" \"wait-on tcp:127.0.0.1:3000 && pnpm run boot\"",
		"electron:run": "pnpm run electron:build && ./agentts/build/flexigpt-linux-x86_64.AppImage",
		"wails:build": "cd ./agentgo && wails build -m -clean -devtools -v 2 -tags webkit2_41",
		"wails:dev": "wails dev",
		"wails:run": "pnpm run wails:build && ./build/bin/flexigpt",
		"gobackend:run": "./scripts/run_backend.sh"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@typescript-eslint/parser": "^8.13.0",
		"concurrently": "^9.1.0",
		"electron": "31.3.0",
		"eslint": "^8.57.1",
		"eslint-config-next": "14.2.11",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.1",
		"lerna": "^8.1.9",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths-webpack-plugin": "^4.1.0",
		"typescript": "^5",
		"wait-on": "^8.0.0"
	}
}
