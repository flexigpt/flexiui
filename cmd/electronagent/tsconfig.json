{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"outDir": "build"
	},
	"references": [
		{ "path": "../../pkgts/logger" },
		{ "path": "../../pkgts/aiprovider" },
		{ "path": "../../pkgts/winstonlogger" },
		{ "path": "../../pkgts/settingstore" },
		{ "path": "../../pkgts/conversationstore" }
	],
	"include": ["**/*.ts"],
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"exclude": ["node_modules", "dist", "build"]
}
