{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"outDir": "build"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
